 <html lang="en">

<head>
    <title></title>
     <script src="jquery.js"></script>
    <script src="socket.io/socket.io.js"></script>



 <style type="text/css">
    /* style of the pop-up log-in*/
    #page-cover {
    background-color: #4CAF50; 
    display: none; 
    position: absolute; 
    width: 100%; 
    height: 100%
    }
    #uncloseable-lightbox {
    background-color: #4CAF50;
    height: 200px;
    position: absolute;
    left: 10px;
    top: 10px;
    width: 500px;
}
#uncloseable-lightbox button { position: absolute }
#uncloseable-lightbox #close-button { top: 10px; right: 10px;}
#uncloseable-lightbox #click-first-button { bottom: 10px; left: 10px;}
    </style>



</head>
<body>
<div id="page-cover">
    <div id="uncloseable-lightbox">
        <table>
            
 <th Align=Left>
        <form action="/auth/sign_in" method="post" >
        <!--Log-in box-->
        <input type="text" name="email" placeholder="email" required>
        <input type="password" name="password" placeholder="password" required>
        <input type="submit" value="Login"> 
        </form> 
    </th>

        </table>
    </div>
</div>


<script type="text/javascript">
//function for the unclosable pop-up
var outerThis = this, isCloseable = false;

$(document).ready(function () {
        $('#page-cover').show();
    });



$(document).ready(function () {
    $('#close-button').on('click', function (e) {
        e.preventDefault();
        if(outerThis.isCloseable) {
            $('#page-cover').hide();
            outerThis.isCloseable = false;
        }
    });

    $('#click-first-button').on('click', function (e) {
        e.preventDefault();
        outerThis.isCloseable = true;
    });    
    
});

</script>
</body>
</html>